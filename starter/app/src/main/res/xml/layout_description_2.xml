<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@+id/end"
        app:constraintSetStart="@+id/start"
        app:autoTransition="animateToEnd"
        app:duration="3000">

        <KeyFrameSet>

            <KeyAttribute
                app:framePosition="50"
                app:motionTarget="@id/ok_button"
                android:scaleY="2.0"
                android:scaleX="2.0"
                android:rotation="-360"
                />


            <!-- File Name Text -->
            <KeyAttribute
                app:framePosition="50"
                app:motionTarget="@id/title_file_name"
                android:scaleY="6.0"
                android:scaleX="6.0"
                android:rotation="-7200"
                />

            <!-- Y translation -->
            <KeyPosition
                app:framePosition="25"
                app:motionTarget="@id/title_file_name"
                app:keyPositionType="parentRelative"
                app:percentY="-0.2"
                />
            <KeyPosition
                app:framePosition="50"
                app:motionTarget="@id/title_file_name"
                app:keyPositionType="parentRelative"
                app:percentY="0.5"
                />
            <KeyPosition
                app:framePosition="75"
                app:motionTarget="@id/title_file_name"
                app:keyPositionType="parentRelative"
                app:percentY="1.2"
                />

            <!-- X translation -->
            <KeyPosition
                app:framePosition="26"
                app:motionTarget="@id/title_file_name"
                app:keyPositionType="parentRelative"
                app:percentX="-0.2"
                />
            <KeyPosition
                app:framePosition="51"
                app:motionTarget="@id/title_file_name"
                app:keyPositionType="parentRelative"
                app:percentX="0.5"
                />
            <KeyPosition
                app:framePosition="76"
                app:motionTarget="@id/title_file_name"
                app:keyPositionType="parentRelative"
                app:percentX="1.2"
                />

            <!-- Wow text X translation -->
            <KeyAttribute
                app:framePosition="0"
                app:motionTarget="@+id/wow_text"
                android:translationX="1000dp"
                />

            <KeyAttribute
                app:framePosition="100"
                app:motionTarget="@+id/wow_text"
                android:translationX="-1000dp"
                />

        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/title_file_name"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:alpha="0"
            app:layout_constraintBaseline_toBaselineOf="@+id/file_name_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/label_barrier"/>

        <Constraint
            android:id="@+id/file_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:alpha="0"
            app:layout_constraintBaseline_toBaselineOf="@+id/file_status_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/label_barrier" />

        <Constraint
            android:id="@+id/ok_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/title_file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:alpha="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/file_name_label" />

        <Constraint
            android:id="@+id/file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:alpha="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/file_status_label" />

        <Constraint
            android:id="@+id/ok_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </ConstraintSet>

</MotionScene>